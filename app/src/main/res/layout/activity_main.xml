<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User_Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8BC34A"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/txt_Title"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:paddingTop="20px"
            android:text="F - Connect"
            android:textColor="#3F51B5"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="20px"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:srcCompat="@drawable/avt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="40px"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_Ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lê Hoàng Vỹ"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_Sdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SĐT : 0949859312" />

            <Button
                android:id="@+id/btn_CapNhat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cập nhật hồ sơ" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/gift" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới thiệu F-Connect cho bạn bè"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhận ngay 20.000đ"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30px"
            android:paddingBottom="30px">

            <ImageButton
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/congdong" />

            <TextView
                android:id="@+id/txt_hs_Ten_GT"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="Cộng đồng F-Connect"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/next" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30px"
            android:paddingBottom="30px">

            <ImageButton
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/yeuthich" />

            <TextView
                android:id="@+id/txt_hs_Email"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="Danh sách yêu thích"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/next" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30px"
            android:paddingBottom="30px">

            <ImageButton
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/card" />

            <TextView
                android:id="@+id/txt_hs_NgaySinh"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="Quản lý thẻ"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/next" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30px"
            android:paddingBottom="30px">

            <ImageButton
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/question" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="Câu hỏi thường gặp"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/next" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30px"
            android:paddingBottom="30px">

            <ImageButton
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/card" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="Liên hệ F-Connect"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/next" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30px"
            android:paddingBottom="30px">

            <ImageButton
                android:id="@+id/btn_CaiDatTaiKhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:gravity="bottom"
                app:srcCompat="@drawable/caidat" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingLeft="20px"
                android:gravity="bottom"
                android:textSize="18sp"
                android:paddingRight="20px"
                android:text="Cài đặt tài khoản" />

            <ImageButton
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"

                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"

                android:paddingLeft="20px"
                android:paddingRight="20px"

                app:srcCompat="@drawable/next" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30px"
            android:paddingBottom="30px">

            <ImageButton
                android:id="@+id/imageView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/version" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="Phiên bản 1.0.0"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#FFFFFF"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                app:srcCompat="@drawable/next" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn_DangXuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:layout_gravity="right"
        android:backgroundTint="#FFFFFF"
        android:textColor="@color/black"
        app:iconTint="#050505"
        app:icon="@drawable/logout" />


</LinearLayout>